<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="40dp"
            android:paddingBottom="30dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mood Journal"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="40sp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track your emotions and reflect on your day"
                android:textColor="#666666"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Mood Logger -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f8f8f8"
            android:padding="30dp"
            android:layout_marginBottom="40dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How are you feeling today?"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginBottom="20dp"/>

            <!-- Emoji Grid -->
            <GridLayout
                android:id="@+id/emojiGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="5"
                android:layout_marginBottom="25dp"
                android:alignmentMode="alignBounds"
                android:useDefaultMargins="false">
                
                <Button android:id="@+id/emoji1" android:layout_width="0dp" android:layout_height="70dp" android:layout_columnWeight="1" android:text="ðŸ˜Š" android:textSize="32sp" android:background="@android:color/transparent" android:layout_margin="2dp" android:tag="Happy" android:minWidth="0dp" android:minHeight="0dp" android:padding="0dp"/>
                <Button android:id="@+id/emoji2" android:layout_width="0dp" android:layout_height="70dp" android:layout_columnWeight="1" android:text="ðŸ˜¢" android:textSize="32sp" android:background="@android:color/transparent" android:layout_margin="2dp" android:tag="Sad" android:minWidth="0dp" android:minHeight="0dp" android:padding="0dp"/>
                <Button android:id="@+id/emoji3" android:layout_width="0dp" android:layout_height="70dp" android:layout_columnWeight="1" android:text="ðŸ˜¡" android:textSize="32sp" android:background="@android:color/transparent" android:layout_margin="2dp" android:tag="Angry" android:minWidth="0dp" android:minHeight="0dp" android:padding="0dp"/>
                <Button android:id="@+id/emoji4" android:layout_width="0dp" android:layout_height="70dp" android:layout_columnWeight="1" android:text="ðŸ˜°" android:textSize="32sp" android:background="@android:color/transparent" android:layout_margin="2dp" android:tag="Anxious" android:minWidth="0dp" android:minHeight="0dp" android:padding="0dp"/>
                <Button android:id="@+id/emoji5" android:layout_width="0dp" android:layout_height="70dp" android:layout_columnWeight="1" android:text="ðŸ˜´" android:textSize="32sp" android:background="@android:color/transparent" android:layout_margin="2dp" android:tag="Tired" android:minWidth="0dp" android:minHeight="0dp" android:padding="0dp"/>
                
                <Button android:id="@+id/emoji6" android:layout_width="0dp" android:layout_height="70dp" android:layout_columnWeight="1" android:text="ðŸ¤—" android:textSize="32sp" android:background="@android:color/transparent" android:layout_margin="2dp" android:tag="Loved" android:minWidth="0dp" android:minHeight="0dp" android:padding="0dp"/>
                <Button android:id="@+id/emoji7" android:layout_width="0dp" android:layout_height="70dp" android:layout_columnWeight="1" android:text="ðŸ˜Ž" android:textSize="32sp" android:background="@android:color/transparent" android:layout_margin="2dp" android:tag="Confident" android:minWidth="0dp" android:minHeight="0dp" android:padding="0dp"/>
                <Button android:id="@+id/emoji8" android:layout_width="0dp" android:layout_height="70dp" android:layout_columnWeight="1" android:text="ðŸ¤”" android:textSize="32sp" android:background="@android:color/transparent" android:layout_margin="2dp" android:tag="Thoughtful" android:minWidth="0dp" android:minHeight="0dp" android:padding="0dp"/>
                <Button android:id="@+id/emoji9" android:layout_width="0dp" android:layout_height="70dp" android:layout_columnWeight="1" android:text="ðŸ˜Œ" android:textSize="32sp" android:background="@android:color/transparent" android:layout_margin="2dp" android:tag="Peaceful" android:minWidth="0dp" android:minHeight="0dp" android:padding="0dp"/>
                <Button android:id="@+id/emoji10" android:layout_width="0dp" android:layout_height="70dp" android:layout_columnWeight="1" android:text="ðŸ¥³" android:textSize="32sp" android:background="@android:color/transparent" android:layout_margin="2dp" android:tag="Excited" android:minWidth="0dp" android:minHeight="0dp" android:padding="0dp"/>
            </GridLayout>

            <EditText
                android:id="@+id/etMoodNote"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="Add a note about your mood (optional)..."
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:background="#ffffff"
                android:padding="15dp"
                android:gravity="top"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btnLogMood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Mood"
                android:textColor="#ffffff"
                android:backgroundTint="#22c55e"
                android:padding="15dp"
                android:enabled="false"/>
        </LinearLayout>

        <!-- Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="30dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#f8f8f8"
                android:padding="20dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvTotalEntries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#22c55e"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Entries"
                    android:textColor="#666666"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#f8f8f8"
                android:padding="20dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvThisWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#22c55e"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Week"
                    android:textColor="#666666"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#f8f8f8"
                android:padding="20dp"
                android:layout_marginStart="8dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvTopMood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="#22c55e"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Most Common"
                    android:textColor="#666666"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- View Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">
            <Button
                android:id="@+id/btnListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List View"
                android:backgroundTint="#22c55e"
                android:textColor="#ffffff"
                android:layout_marginEnd="10dp"/>
            <Button
                android:id="@+id/btnCalendarView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calendar View"
                android:backgroundTint="#ffffff"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Mood History -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Mood History"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"/>

        <!-- List View -->
        <LinearLayout
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Mood entries will be added here dynamically -->
        </LinearLayout>

        <!-- Calendar View (Simple Grid) -->
        <GridLayout
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="7"
            android:visibility="gone">
            <!-- Calendar days will be added here dynamically -->
        </GridLayout>

    </LinearLayout>

</ScrollView>
