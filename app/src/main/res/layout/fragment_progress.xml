<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress Tracker"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track your wellness journey over time"
                android:textSize="16sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Time Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <Button
                android:id="@+id/btn7Days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last 7 Days"
                android:textSize="14sp"
                android:textColor="#000000"
                android:background="@drawable/bg_time_button"
                android:layout_marginEnd="10dp"
                android:padding="8dp" />

            <Button
                android:id="@+id/btn14Days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last 14 Days"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:backgroundTint="#22c55e"
                android:layout_marginEnd="10dp"
                android:padding="8dp" />

            <Button
                android:id="@+id/btn30Days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last 30 Days"
                android:textSize="14sp"
                android:textColor="#000000"
                android:background="@drawable/bg_time_button"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Stats Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#f9fafb"
                    android:padding="20dp"
                    android:layout_marginEnd="10dp"
                    style="@style/CardStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average Water Intake"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvAvgWater"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7.2"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#22c55e" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="glasses/day"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#f9fafb"
                    android:padding="20dp"
                    android:layout_marginStart="10dp"
                    style="@style/CardStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average Mood Score"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvAvgMood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.1"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#22c55e" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/5"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#f9fafb"
                    android:padding="20dp"
                    android:layout_marginEnd="10dp"
                    style="@style/CardStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average Sleep"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvAvgSleep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7.5"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#22c55e" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hours/night"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#f9fafb"
                    android:padding="20dp"
                    android:layout_marginStart="10dp"
                    style="@style/CardStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Entries"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvTotalEntries"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="42"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#22c55e" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="days"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Water Chart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="24dp"
            android:layout_marginBottom="30dp"
            style="@style/CardStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Water Intake"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="16dp">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="#22c55e"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Actual"
                            android:textSize="14sp"
                            android:textColor="#000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="#86efac"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Goal (8 glasses)"
                            android:textSize="14sp"
                            android:textColor="#000000" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/waterChartView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#f9fafb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:paddingTop="16dp"
                android:background="@drawable/bg_top_border">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvWaterTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="101 glasses"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goal Achievement"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvWaterGoalAchievement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90%"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best Day"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvWaterBestDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 glasses"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Mood Chart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="24dp"
            android:layout_marginBottom="30dp"
            style="@style/CardStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mood Trends"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="#22c55e"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mood Score"
                        android:textSize="14sp"
                        android:textColor="#000000" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/moodChartView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#f9fafb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:paddingTop="16dp"
                android:background="@drawable/bg_top_border">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvMoodAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.1/5"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best Day"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvMoodBestDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0/5"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trend"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvMoodTrend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â†‘ Improving"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#22c55e" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Sleep Chart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="24dp"
            style="@style/CardStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sleep Hours"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="16dp">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="#22c55e"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Actual"
                            android:textSize="14sp"
                            android:textColor="#000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="#86efac"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Goal (8 hours)"
                            android:textSize="14sp"
                            android:textColor="#000000" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/sleepChartView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#f9fafb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:paddingTop="16dp"
                android:background="@drawable/bg_top_border">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvSleepAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.5 hrs"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvSleepTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="105 hrs"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best Night"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvSleepBestNight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9.0 hrs"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>